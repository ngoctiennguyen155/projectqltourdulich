<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("3TTour", "Index", "tours", new { area = "" }, new { @class = "navbar-brand", @style = "font-size: 30px;" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Tour", "Index", "tours")</li>
                    <li>@Html.ActionLink("Thống kê tour", "Index", "tour_nguoidi")</li>
                    <li>@Html.ActionLink("Đoàn khách", "Index", "tour_doan")</li>
                    <li>@Html.ActionLink("Giá tour", "Index", "tour_gia")</li>
                    @*<li>@Html.ActionLink("Người đi", "Index", "tour_nguoidi")</li>
        <li>@Html.ActionLink("chi phí", "Index", "tour_chiphi")</li>*@
                    <li>@Html.ActionLink("Nhân viên", "Index", "tour_nhanvien")</li>
                    <li>@Html.ActionLink("Khách hàng", "Index", "tour_khachhang")</li>
                    <li>@Html.ActionLink("Địa điểm", "Index", "tour_diadiem")</li>
                    <li>@Html.ActionLink("Loại hình du lịch", "Index", "tour_loai")</li>
                    <li>@Html.ActionLink("Loại chi phí", "Index", "tour_loaichiphii")</li>


                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
