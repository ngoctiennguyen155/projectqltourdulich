@model IEnumerable<projecttour.Models.tour_diadiem>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card w-100">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6 text-danger text-uppercase">
                <strong>Danh sách địa điểm</strong>
            </div>

            <div class="col-md-6 text-right">
                <a href="@Url.Action("Create")" class="btn btn-sm btn-success" data-toggle="tooltip" title="Thêm mới">
                    <span class="fa fa-plus-square"></span>
                </a>
            </div>
        </div>
    </div>
    <div class="card-block p-3">
        <table class="table table-bordered table-hover table-striped w-100">
            <tr>
                <th>
                    Tên thành phố
                </th>
                <th>
                    Địa điểm
                </th>
                <th>
                    Mô tả
                </th>
                <th class="text-center">
                    Chức năng
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.dd_thanhpho)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.dd_ten)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.dd_mota)
                    </td>
                    <td class="text-center">
                        <a href="@Url.Action("Edit",new { id = item.dd_id })" class="btn btn-sm btn-success" data-toggle="tooltip" title="Sửa">
                            <span class="fa fa-cog"></span>
                        </a>
                        <a href="@Url.Action("Delete",new { id = item.dd_id })" class="btn btn-sm btn-danger" data-toggle="tooltip" title="Xóa">
                            <span class="fa fa-trash"></span>
                        </a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

