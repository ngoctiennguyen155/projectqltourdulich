@model projecttour.Models.tour_gia

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<div class="form-horizontal">
    <h4>tour_gia</h4>
    <hr />

    @using (Html.BeginForm("Edit", "tour_gia", FormMethod.Post))
    {
        <input type="text" value="@ViewBag.tour.gia_id" name="gia_id" hidden />
        
        <div class="form-group">
            <label class="control-label col-md-2" for="gia_sotien">gia_sotien</label>
            <div class="col-md-10">
                <input class="form-control text-box single-line" data-val="true" data-val-number="The field gia_sotien must be a number." id="gia_sotien" name="gia_sotien" type="text" value="@ViewBag.tour.gia_sotien" />
                <span class="field-validation-valid text-danger" data-valmsg-for="gia_sotien" data-valmsg-replace="true"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="gia_tungay">gia_tungay</label>
            <div class="col-md-10">
                <input class="form-control text-box single-line" data-val="true" data-val-date="The field gia_tungay must be a date." id="gia_tungay" name="gia_tungay" type="date" value="@ViewBag.tour.gia_tungay.ToString("yyyy-MM-dd")" />
                <span class="field-validation-valid text-danger" data-valmsg-for="gia_tungay" data-valmsg-replace="true"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="gia_denngay">gia_denngay</label>
            <div class="col-md-10">
                <input class="form-control text-box single-line" data-val="true" data-val-date="The field gia_denngay must be a date." id="gia_denngay" name="gia_denngay" type="date" value="@ViewBag.tour.gia_denngay.ToString("yyyy-MM-dd")" />
                <span class="field-validation-valid text-danger" data-valmsg-for="gia_denngay" data-valmsg-replace="true"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="block">Tour</label>
            <div class="col-md-10">

                <select class="form-control" id="block" name="tour_id" disabled>
                    @{
                        foreach (var item in ViewBag.tours)
                        {
                            if (item.tour_id == ViewBag.tour.tour_id)
                            {
                                <option value="@item.tour_id">@item.tour_ten</option>
                                <input type="text" value="@item.tour_id" name="tour_id" hidden />
                            }
                        }
                    }
                </select>
                <span class="field-validation-valid text-danger" data-valmsg-for="block" data-valmsg-replace="true"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update" class="btn btn-default" />
            </div>
        </div>

    }
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
