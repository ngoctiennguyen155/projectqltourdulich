@model IEnumerable<projecttour.Models.tour_loai>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tên loại
        </th>
        <th>
            Mô tả
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.loai_ten)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.loai_mota)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.loai_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.loai_id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.loai_id })
        </td>
    </tr>
}

</table>
